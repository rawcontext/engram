{
	"$schema": "https://biomejs.dev/schemas/2.3.10/schema.json",
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"useIgnoreFile": true
	},
	"files": {
		"ignoreUnknown": false,
		"includes": [
			"**",
			"!**/dist",
			"!**/.next",
			"!**/node_modules",
			"!**/coverage",
			"!**/.turbo",
			"!**/playwright-report",
			"!**/test-results",
			"!**/.venv",
			"!**/__pycache__",
			"!**/*.lock"
		]
	},
	"css": {
		"linter": {
			"enabled": false
		}
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab",
		"indentWidth": 2,
		"lineWidth": 100
	},
	"assist": { "actions": { "source": { "organizeImports": "on" } } },
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"suspicious": {
				"noExplicitAny": "off",
				"noArrayIndexKey": "warn"
			},
			"a11y": {
				"useButtonType": "warn",
				"noSvgWithoutTitle": "off",
				"noStaticElementInteractions": "off"
			},
			"complexity": {
				"noUselessConstructor": "warn",
				"noBannedTypes": "warn"
			},
			"style": {
				"noNonNullAssertion": "warn"
			},
			"correctness": {
				"noUnusedVariables": "warn",
				"noUnusedFunctionParameters": "warn",
				"noConstructorReturn": "warn"
			}
		}
	},
	"overrides": [
		{
			"includes": ["**/*.test.ts", "**/*.test.tsx", "tests/**/*"],
			"linter": {
				"rules": {
					"suspicious": {
						"noExplicitAny": "off",
						"noArrayIndexKey": "off"
					},
					"correctness": {
						"noUnusedVariables": "off"
					}
				}
			}
		},
		{
			"includes": ["scripts/**/*"],
			"linter": {
				"rules": {
					"suspicious": {
						"noExplicitAny": "off"
					},
					"correctness": {
						"noUnusedFunctionParameters": "off"
					}
				}
			}
		}
	],
	"javascript": {
		"formatter": {
			"quoteStyle": "double"
		}
	}
}
