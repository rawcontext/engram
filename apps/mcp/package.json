{
	"name": "engram-mcp",
	"version": "0.1.0",
	"description": "Engram MCP server - intelligent memory for AI agents",
	"type": "module",
	"bin": {
		"engram-mcp": "dist/index.js"
	},
	"main": "./dist/index.js",
	"exports": {
		".": {
			"import": "./dist/index.js"
		}
	},
	"files": [
		"dist",
		"README.md"
	],
	"repository": {
		"type": "git",
		"url": "git+https://github.com/ccheney/engram.git",
		"directory": "apps/mcp"
	},
	"keywords": [
		"mcp",
		"memory",
		"ai",
		"agent",
		"claude",
		"llm",
		"context",
		"engram"
	],
	"license": "AGPL-3.0",
	"engines": {
		"node": ">=20"
	},
	"publishConfig": {
		"access": "public"
	},
	"dependencies": {
		"@engram/graph": "*",
		"@engram/logger": "*",
		"@engram/storage": "*",
		"@hono/node-server": "^1.14.1",
		"@modelcontextprotocol/sdk": "^1.24.3",
		"hono": "^4.7.10",
		"ulid": "^3.0.2",
		"zod": "^4.1.13"
	},
	"devDependencies": {
		"@engram/tsconfig": "*",
		"@types/node": "^24.10.1",
		"tsup": "^8.5.1",
		"typescript": "^5.9.3"
	},
	"scripts": {
		"dev": "tsx --env-file=.env src/index.ts",
		"dev:http": "tsx --env-file=.env src/http-server.ts",
		"build": "tsup",
		"build:tsc": "tsc",
		"typecheck": "tsc --noEmit",
		"prepublishOnly": "npm run build",
		"start": "node dist/index.js",
		"start:http": "node dist/http-server.js"
	}
}
