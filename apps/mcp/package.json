{
	"name": "engram-mcp",
	"version": "0.0.0",
	"type": "module",
	"bin": {
		"engram-mcp": "./dist/index.js"
	},
	"dependencies": {
		"@engram/graph": "*",
		"@engram/logger": "*",
		"@engram/search": "*",
		"@engram/storage": "*",
		"@hono/node-server": "^1.14.1",
		"@modelcontextprotocol/sdk": "^1.24.3",
		"hono": "^4.7.10",
		"ulid": "^3.0.2",
		"zod": "^4.1.13"
	},
	"devDependencies": {
		"@engram/tsconfig": "*",
		"@types/node": "^24.10.1",
		"typescript": "^5.9.3"
	},
	"scripts": {
		"dev": "tsx --env-file=.env src/index.ts",
		"dev:http": "tsx --env-file=.env src/http-server.ts",
		"build": "tsc",
		"typecheck": "tsc --noEmit",
		"start": "node dist/index.js",
		"start:http": "node dist/http-server.js"
	}
}
