{
	"name": "@rawcontext/engram-mcp",
	"version": "0.1.4",
	"description": "Engram MCP server - intelligent memory for AI agents",
	"type": "module",
	"bin": {
		"engram-mcp": "dist/index.js"
	},
	"main": "./dist/index.js",
	"exports": {
		".": {
			"import": "./dist/index.js"
		}
	},
	"files": [
		"dist",
		"README.md"
	],
	"homepage": "https://github.com/rawcontext/engram/tree/main/apps/mcp#readme",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/rawcontext/engram.git",
		"directory": "apps/mcp"
	},
	"keywords": [
		"mcp",
		"memory",
		"ai",
		"agent",
		"claude",
		"llm",
		"context",
		"engram"
	],
	"license": "AGPL-3.0",
	"engines": {
		"bun": ">=1.0"
	},
	"publishConfig": {
		"access": "public"
	},
	"dependencies": {
		"@engram/graph": "*",
		"@engram/logger": "*",
		"@modelcontextprotocol/sdk": "^1.25.1",
		"express": "^5.0.1",
		"ulid": "^3.0.2",
		"zod": "^4.2.1"
	},
	"devDependencies": {
		"@engram/tsconfig": "*",
		"@types/express": "^5.0.0",
		"@types/node": "^25.0.3",
		"tsup": "^8.5.1"
	},
	"scripts": {
		"dev": "tsx --env-file=.env src/index.ts",
		"build": "tsup",
		"build:tsc": "tsgo",
		"typecheck": "tsgo --noEmit",
		"prepublishOnly": "bun run build",
		"start": "bun dist/index.js",
		"lint": "biome check .",
		"format": "biome format ."
	}
}
