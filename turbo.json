{
	"$schema": "https://turbo.build/schema.json",
	"remoteCache": {
		"signature": true
	},
	"globalDependencies": ["tsconfig.json", "biome.json", "bunfig.toml"],
	"globalPassThroughEnv": ["CI", "NODE_ENV", "GITHUB_ACTIONS"],
	"globalEnv": ["REDIS_URL", "QDRANT_URL"],
	"tasks": {
		"build": {
			"dependsOn": ["^build"],
			"inputs": ["$TURBO_DEFAULT$", "!**/*.test.ts", "!**/*.spec.ts"],
			"outputs": ["dist/**", ".next/**", "!.next/cache/**"],
			"outputLogs": "new-only"
		},
		"typecheck": {
			"dependsOn": ["^build"],
			"inputs": ["$TURBO_DEFAULT$", "tsconfig.json"],
			"outputLogs": "new-only"
		},
		"dev": {
			"cache": false,
			"persistent": true
		},
		"//#lint:run": {
			"inputs": ["apps/**/*.ts", "apps/**/*.tsx", "packages/**/*.ts", "biome.json"],
			"outputLogs": "new-only"
		},
		"//#format:run": {
			"inputs": ["apps/**/*.ts", "apps/**/*.tsx", "packages/**/*.ts", "biome.json"],
			"outputLogs": "new-only"
		},
		"//#test:ts": {
			"dependsOn": ["^build"],
			"inputs": [
				"apps/**/*.ts",
				"apps/**/*.tsx",
				"packages/**/*.ts",
				"!packages/benchmark/**",
				"test-preload.ts",
				"bunfig.toml"
			],
			"outputs": ["coverage/**"],
			"outputLogs": "new-only"
		},
		"test:py": {
			"inputs": ["src/**/*.py", "tests/**/*.py", "pyproject.toml"],
			"outputs": ["coverage/**", ".coverage", "htmlcov/**"],
			"outputLogs": "new-only"
		}
	}
}
