{
	"name": "engram",
	"version": "0.0.0",
	"private": true,
	"workspaces": [
		"apps/*",
		"packages/*",
		"tooling/*"
	],
	"overrides": {
		"zod": "$zod"
	},
	"scripts": {
		"build": "turbo run build",
		"typecheck": "turbo run typecheck",
		"dev": "turbo run dev",
		"lint": "biome check --write .",
		"format": "biome format --write .",
		"test": "turbo run test:ts test",
		"test:ts": "vitest run",
		"test:ts:watch": "vitest",
		"infra:up": "docker-compose -f docker-compose.dev.yml up -d",
		"infra:down": "docker-compose -f docker-compose.dev.yml down",
		"prepare": "husky"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.3.10",
		"@engram/events": "*",
		"@engram/storage": "*",
		"@modelcontextprotocol/sdk": "^1.25.1",
		"@qdrant/js-client-rest": "^1.16.2",
		"@typescript/native-preview": "^7.0.0-dev.20251220.1",
		"@vitest/coverage-v8": "^4.0.16",
		"c8": "^10.1.3",
		"falkordb": "^6.4.1",
		"husky": "^9.1.7",
		"jsdom": "^27.3.0",
		"patch-package": "^8.0.1",
		"pino-pretty": "^13.1.3",
		"tsx": "^4.21.0",
		"turbo": "^2.7.1",
		"vitest": "^4.0.16",
		"zod": "^4.2.1"
	},
	"packageManager": "npm@11.7.0",
	"dependencies": {
		"@confluentinc/kafka-javascript": "^1.7.0"
	}
}
