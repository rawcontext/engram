{
	"name": "engram",
	"version": "0.0.0",
	"private": true,
	"workspaces": [
		"apps/*",
		"packages/*",
		"tooling/*"
	],
	"overrides": {
		"zod": "$zod"
	},
	"scripts": {
		"build": "dotenv -- turbo run build",
		"typecheck": "dotenv -- turbo run typecheck",
		"dev": "dotenv -- turbo run dev",
		"lint": "dotenv -- turbo run //#lint:run",
		"lint:run": "biome check --write .",
		"format": "dotenv -- turbo run //#format:run",
		"format:run": "biome format --write .",
		"test": "SKIP_INTEGRATION=true bun test",
		"test:ts": "SKIP_INTEGRATION=true CI=true bun test",
		"test:integration": "bun test",
		"test:watch": "bun test --watch",
		"infra:up": "./scripts/infra-up.sh",
		"infra:down": "./scripts/infra-down.sh",
		"infra:docker": "docker-compose -f docker-compose.dev.yml up -d nats falkordb qdrant postgres",
		"infra:docker:down": "docker-compose -f docker-compose.dev.yml down",
		"prepare": "husky"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.3.10",
		"@engram/events": "*",
		"@engram/storage": "*",
		"@modelcontextprotocol/sdk": "^1.25.1",
		"@qdrant/js-client-rest": "^1.16.2",
		"@typescript/native-preview": "^7.0.0-dev.20251220.1",
		"c8": "^10.1.3",
		"dotenv-cli": "^11.0.0",
		"falkordb": "^6.4.1",
		"husky": "^9.1.7",
		"patch-package": "^8.0.1",
		"pino-pretty": "^13.1.3",
		"tsx": "^4.21.0",
		"turbo": "^2.7.1",
		"zod": "^4.2.1",
		"@types/bun": "1.3.5"
	},
	"packageManager": "bun@1.3.5",
	"dependencies": {
		"@nats-io/jetstream": "^3.3.0",
		"@nats-io/transport-node": "^3.3.0"
	},
	"peerDependencies": {
		"typescript": "^5"
	}
}
