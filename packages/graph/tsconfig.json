{
	"extends": "@engram/tsconfig/base.json",
	"compilerOptions": {
		"rootDir": ".",
		"outDir": "dist",
		"paths": {
			"@engram/graph/generated": ["./src/generated/index.ts"],
			"@engram/graph/generated/*": ["./src/generated/*"]
		}
	},
	"include": ["src/**/*", "src/generated/**/*"],
	"exclude": ["node_modules", "dist", "**/*.test.ts"]
}
