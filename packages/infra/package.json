{
	"name": "@engram/infra",
	"version": "0.0.0",
	"private": true,
	"main": "src/index.ts",
	"devDependencies": {
		"@engram/tsconfig": "*",
		"@types/node": "^25.0.3"
	},
	"dependencies": {
		"@pulumi/gcp": "^9.6.0",
		"@pulumi/kubernetes": "^4.24.1",
		"@pulumi/pulumi": "^3.213.0"
	},
	"scripts": {
		"build": "echo 'Pulumi compiles TypeScript directly'",
		"typecheck": "tsc --noEmit",
		"preview": "pulumi preview",
		"up": "pulumi up",
		"destroy": "pulumi destroy",
		"wake": "pulumi config set devEnabled true && pulumi up --yes",
		"sleep": "pulumi config set devEnabled false && pulumi up --yes",
		"status": "pulumi config get devEnabled 2>/dev/null || echo 'true (default)'",
		"lint": "biome check .",
		"format": "biome format ."
	}
}
